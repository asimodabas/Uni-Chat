<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.asimodabas.uni_chat.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_createFragment"
            app:destination="@id/createFragment" />
        <action
            android:id="@+id/action_loginFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.asimodabas.uni_chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chatFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/createFragment"
        android:name="com.asimodabas.uni_chat.CreateFragment"
        android:label="fragment_create"
        tools:layout="@layout/fragment_create" >
        <action
            android:id="@+id/action_createFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.asimodabas.uni_chat.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" >
        <action
            android:id="@+id/action_secondFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_secondFragment_to_engineerFragment"
            app:destination="@id/engineerFragment" />
    </fragment>
    <fragment
        android:id="@+id/engineerFragment"
        android:name="com.asimodabas.uni_chat.EngineerFragment"
        android:label="fragment_engineer"
        tools:layout="@layout/fragment_engineer" >
        <action
            android:id="@+id/action_engineerFragment_to_mediaChatFragment"
            app:destination="@id/mediaChatFragment" />
        <action
            android:id="@+id/action_engineerFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/mediaChatFragment"
        android:name="com.asimodabas.uni_chat.MediaChatFragment"
        android:label="fragment_media_chat"
        tools:layout="@layout/fragment_media_chat" >
        <action
            android:id="@+id/action_mediaChatFragment_to_updateMediaFragment"
            app:destination="@id/updateMediaFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateMediaFragment"
        android:name="com.asimodabas.uni_chat.UpdateMediaFragment"
        android:label="fragment_update_media"
        tools:layout="@layout/fragment_update_media" >
        <action
            android:id="@+id/action_updateMediaFragment_to_mediaChatFragment"
            app:destination="@id/mediaChatFragment" />
    </fragment>
</navigation>